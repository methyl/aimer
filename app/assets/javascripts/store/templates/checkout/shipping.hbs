<div class="form">
  <header>Spos√≥b dostawy:</header>
  <form class="shipping aimer-form">
    {{#each shippingRates}}
      <div class="option">
        <input type="radio" name="shipping_rate_id" id="shipping_rate_{{id}}" value="{{id}}">
        <label for="shipping_rate_{{id}}">
          <span class="name">{{name}}</span>

          {{#if ../shippingFree}}
            <span class="cost"><em>{{formatted_cost}}</em> 0 pln!</span>
          {{else}}
            <span class="cost">{{formatted_cost}}</span>
          {{/if}}

          {{#if description}}
            <span class="description">({{description}})</span>
          {{/if}}
        </label>
      </div>
    {{/each}}
  </form>
</div>

<div data-subview="cart"></div>

<button class="next-step btn" data-role="next-shipping">Dalej</button>
